global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets:
{% for host in groups['prom_grafana'] %}
          - '{{ hostvars[host]["ansible_host"] }}:9090'
          - '{{ hostvars[host]["ansible_host"] }}:9100'
{% endfor %}
{% for host in groups['node_exporter'] %}
          - '{{ hostvars[host]["ansible_host"] }}:9100'
{% endfor %}
